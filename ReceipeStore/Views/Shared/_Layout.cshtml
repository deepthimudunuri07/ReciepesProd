<!DOCTYPE html>
<html lang="en" ng-app="Runapp">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body class="ImageShow">
    <div class="container Testbackground ">
        <div ng-controller="HomeController">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ReciepeBook", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="dropdown" align="left">
               
                <a id="dLabel" data-toggle="dropdown" class="" data-target="#">
                    Reciepes <span class="caret"></span>
                </a>
                @Html.Partial("_LoginPartial")
                

                <ul id="menu" class="dropdown-menu multi-level">
                    <li ng-repeat="p in ReciepeCategory">
                        <a href="#" class="trigger right-caret" ng-mouseover="DisplaySubList(p)">{{p.Name}}</a>
                    <ul class="dropdown-submenu" ng-class="p.Name" ng-style="StyleAttr">
                        <li ng-repeat="list in ReciepeList">
                            <a href="#" class="trigger right-caret" ng-mouseover="DisplayReciepe(list)">{{list.Name}}</a>
                        </li>
                    </ul>
                        </li>
                </ul>
            </div>
            </div>


            <div class="container body-content">


                @RenderBody()
                @RenderSection("SPAViews", required: false)

            </div>
            @*</div>*@
        </div>


    <div class="footer">

        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/Runapp")
   

   

    @RenderSection("Scripts", required: false)
</body>
</html>
