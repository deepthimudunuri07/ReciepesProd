<!DOCTYPE html>
<html lang="en" ng-app="Runapp">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body class="ImageShow">
    <div class="container Testbackground ">
        <div ng-controller="HomeController">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ReciepeBook", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.Partial("_LoginPartial")
            </div>
           
            @Html.Partial("MenuBar")
            
            
          </div>


            <div class="container body-content" style="background-color: #fff8dc;">


                @RenderBody()
                @RenderSection("SPAViews", required: false)

            </div>
            @*</div>*@
        </div>


    <div class="footer">

        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/Runapp")
   

   

    @RenderSection("Scripts", required: false)
</body>
</html>
